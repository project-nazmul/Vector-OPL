<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GlistLayout"
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/sl_0"
        android:layout_gravity="left"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:text="Sl"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_8sdp"
        />


    <TextView
        android:id="@+id/con_month"
        android:layout_gravity="left"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:text="Month"
        android:textColor="@color/blue"
        android:textSize="@dimen/_8sdp"
        />

    <TextView
        android:id="@+id/territory_code"
        android:text="Territory Code"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.10"
        android:focusable="true"
        android:layout_marginLeft="0px"
        android:layout_gravity="left"
        android:textAlignment="gravity"
        android:textColor="@color/bg_gradient_end"
        android:textSize="@dimen/_8sdp"
        />

    <TextView
        android:id="@+id/gift_name"
        android:text="Gift Name"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:clickable="true"
        android:layout_marginLeft="0dp"
        android:textAlignment="gravity"
        android:layout_gravity="left"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/_8sdp"
        />
    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:clickable="true"
        android:textAlignment="gravity"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:text="Doctor Name"
        android:textColor="@color/blue"
        android:textSize="@dimen/_8sdp"
        />
    <TextView
        android:id="@+id/doctor_code"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.10"
        android:clickable="true"
        android:textAlignment="gravity"
        android:textSize="@dimen/_8sdp"
        android:layout_gravity="center"
        android:text="Doctor Code"
        android:textColor="@android:color/holo_red_dark"

        />

<CheckBox
    android:id="@+id/chk_checkbox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight=".5"></CheckBox>

</LinearLayout>

