<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/serial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/serial"
            android:layout_weight="1"
            android:textSize="@dimen/_9sdp"
            android:textColor="#090E16" />

        <TextView
            android:id="@+id/manager_dcr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Visitor name"
            android:layout_weight="3"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/vector_logo_color"/>

        <TextView
            android:id="@+id/manager_dcr_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Code"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/deeppurple" />

        <TextView
            android:id="@+id/value_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Market\nName"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/colorAccentEditor" />

        <TextView
            android:id="@+id/dcr_market_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="extra1"
            android:textSize="@dimen/_9sdp"
            android:visibility="gone"
            android:textColor="#005CE6" />

        <TextView
            android:id="@+id/dcr_manager_sshift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Shift"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/vector_logo_color" />

        <TextView
            android:id="@+id/value_6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:text="extra2"
            android:visibility="gone"
            android:textColor="@color/pink" />

        <TextView
            android:id="@+id/value_7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:text="extra2"
            android:visibility="gone"
            android:textColor="@color/pink" />





    </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>

