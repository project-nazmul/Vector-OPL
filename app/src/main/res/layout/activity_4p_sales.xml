<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ff_contact_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeef"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="100"
    tools:context=".pmdVector.sales_4p.Activity_4p_Sales">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:padding="4dp"
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#80D8FF"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/mspinner1"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                app:ms_hint="Select Month"
                app:ms_hint_color="@color/colorAccentEditor"
                app:ms_text_color="@color/colorAccentEditor" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/mspinner2"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                app:ms_hint="Cycle"
                app:ms_hint_color="@color/colorAccentEditor"
                app:ms_text_color="@color/colorAccentEditor" />
        </LinearLayout>

            <AutoCompleteTextView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:id="@+id/autoBrandName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/autocomplete_background"
                android:drawableStart="@drawable/ic_medicine"
                android:ems="0"
                android:hint="Select Brand"
                android:maxLines="1"
                android:paddingStart="@dimen/_10sdp"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">

        <Button
            android:id="@+id/backbt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/dcr_page_button"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:onClick="finishActivity"
            android:soundEffectsEnabled="true"
            android:text="Back"
            android:textColor="#FFF"
            android:textSize="@dimen/_5sdp"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/submit_btton_selector"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:text="show"
            android:textColor="#FFF"
            android:textSize="@dimen/_5sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:fontFamily="@font/acme"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFF8D"
            android:fontFamily="@font/acme">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Brand"
                android:textAlignment="textStart"
                android:textColor="#E91E63"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Value Share"
                android:textColor="#4CAF50"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Rank (Value)"
                android:textColor="#FF5722"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unite Share"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rank (Unite)"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Brandwise"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Regionwise"
                android:textAlignment="textEnd"
                android:textColor="#3F51B5"
                android:textSize="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="12dp"
        android:id="@+id/brandRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_title"
        android:background="@android:color/white"
        android:divider="@android:color/transparent"
        android:padding="4dp"
        android:scrollbars="vertical">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_title_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:fontFamily="@font/acme"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B9F6CA"
            android:fontFamily="@font/acme">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Company Name"
                android:textAlignment="textStart"
                android:textColor="#E91E63"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="left"
                android:text="Brand Name"
                android:textColor="#4CAF50"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Value Share"
                android:textColor="#FF5722"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rank"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unite Share"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rank"
                android:textAlignment="textEnd"
                android:textColor="#3F51B5"
                android:textSize="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/companyRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_title"
        android:background="@android:color/white"
        android:divider="@android:color/transparent"
        android:padding="4dp"
        android:scrollbars="vertical">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/cardview_title3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:fontFamily="@font/acme"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6FC0A5F1"
            android:fontFamily="@font/acme">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Region Name"
                android:textAlignment="textStart"
                android:textColor="#E91E63"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="OPL Brand"
                android:textColor="#4CAF50"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:text="Share"
                android:textColor="#FF5722"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Competitor 1"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Share"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Competitor 2"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Share"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Competitor 3"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Share"
                android:textAlignment="textEnd"
                android:textColor="#3F51B5"
                android:textSize="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recyclerView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_title"
        android:background="@android:color/white"
        android:divider="@android:color/transparent"
        android:padding="4dp"
        android:scrollbars="vertical"></androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/cardview_title4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:fontFamily="@font/acme"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6FC0A5F1"
            android:fontFamily="@font/acme">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Region Name"
                android:textAlignment="textStart"
                android:textColor="#E91E63"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="OPL Brand"
                android:textColor="#4CAF50"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:text="Share"
                android:textColor="#FF5722"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Competitor 1"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Share"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Competitor 2"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Share"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Competitor 3"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Share"
                android:textAlignment="textEnd"
                android:textColor="#3F51B5"
                android:textSize="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recyclerView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_title"
        android:background="@android:color/white"
        android:divider="@android:color/transparent"
        android:padding="4dp"
        android:scrollbars="vertical"></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>

