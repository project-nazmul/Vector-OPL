<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.opl.opluploadimage.MainActivity"
        tools:showIn="@layout/pres_entry">

        <Spinner
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:ems="5"
            android:filterTouchesWhenObscured="true"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:spinnerMode="dialog"
            android:textSize="22sp"
            android:visibility="gone"
            tools:ignore="UnusedAttribute" />




        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@android:drawable/toast_frame"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="98">

            <TextView
                android:id="@+id/comname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:ems="10"
                android:fontFamily="cursive"
                android:gravity="center"

                android:text="@string/opsonin_pharma_limited"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/holo_blue_dark" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/user_show0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="PRESCRIPTION"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/black"
                android:textSize="18sp"

                android:textStyle="bold" />





        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/user_show1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_show2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/logout"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:hapticFeedbackEnabled="true"
                android:soundEffectsEnabled="true"
                android:textColor="#FFF"
                tools:ignore="HardcodedText,UnusedAttribute" />

        </LinearLayout>





















        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView0"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:ems="5"
            android:fontFamily="@font/open_sans"

            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:visibility="visible" />
        <requestFocus />

        <Spinner
            android:id="@+id/setUpLists"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:ems="5"
            android:filterTouchesWhenObscured="true"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:spinnerMode="dialog"
            android:textSize="22sp"
            android:visibility="gone"
            />


        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:ems="5"
            android:fontFamily="@font/open_sans"
            android:hint="@string/select_doctor_type_00_or_doc_name"

            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible" />




        <TextView
            android:id="@+id/inst_name_textview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:fontFamily="@font/open_sans"
            android:hint="Institute Name"

            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />










        <TextView
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:fontFamily="@font/open_sans"


            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible" />




        <TextView
            android:id="@+id/dr_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:fontFamily="@font/open_sans"
            android:hint="Doctor Address"

            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#1264e0"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />







        <TextView
            android:id="@+id/ed_12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:fontFamily="@font/open_sans"
            android:hint="Address"

            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#1264e0"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />


        <TextView
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:fontFamily="@font/open_sans"

            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:visibility="visible" />



        <Spinner
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:ems="5"
            android:filterTouchesWhenObscured="true"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:spinnerMode="dialog"
            android:textSize="22sp"
            android:visibility="gone"
            android:background="@android:drawable/editbox_background"
            tools:ignore="UnusedAttribute" />




        <AutoCompleteTextView
            android:id="@+id/actv_4"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:ems="5"
            android:fontFamily="@font/open_sans"
            android:hint="Select Department"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textStyle="bold"
            android:visibility="gone" />




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:drawable/editbox_background"
                android:clickable="false"
                android:fontFamily="@font/open_sans"

                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:background="@android:drawable/editbox_background"

                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:visibility="gone" />


            <TextView
                android:id="@+id/editText5"
                android:layout_width="fill_parent"
                android:layout_height="40dp"

                android:background="@android:drawable/editbox_background"
                android:clickable="false"

                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:visibility="gone" />






        </RelativeLayout>


        <EditText
            android:id="@+id/ed_8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:fontFamily="@font/open_sans"
            android:hint="Ward Description"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:visibility="gone" />



        <EditText
            android:id="@+id/ed_9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:fontFamily="@font/open_sans"
            android:hint="Enter your Unit Code"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:visibility="gone" />



        <EditText
            android:id="@+id/ed_10"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:fontFamily="@font/open_sans"
            android:hint="Unit No."
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:visibility="gone" />



        <EditText
            android:id="@+id/ed_11"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:fontFamily="@font/open_sans"
            android:hint="Ward No."
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:visibility="gone" />



        <Button
            android:id="@+id/buttonChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/open_sans"

            android:textAppearance="@style/TextAppearance.AppCompat" />


        <Button
            android:id="@+id/buttonCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/open_sans"

            android:textAppearance="@style/TextAppearance.AppCompat" />




        <Button
            android:id="@+id/btn_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/open_sans"

            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.AppCompat" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/todo"
            android:cropToPadding="true" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_grid"
            >

            <GridView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gv"
                android:numColumns="5"
                android:scrollbars="vertical"
                android:background="@android:drawable/gallery_thumb"
                >
            </GridView>

        </LinearLayout>



        <Button
            android:layout_width="wrap_content"
            android:text="Finalise"
            android:onClick="ButtonClick"
            android:visibility="gone"
            android:layout_height="wrap_content" />








        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"

            android:src="@android:drawable/ic_menu_upload" />



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonmultiUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"

            android:src="@android:drawable/ic_menu_upload" />




    </LinearLayout>
</ScrollView>