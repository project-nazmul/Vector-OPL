<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@drawable/page_background"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="0dp"
        card_view:contentPadding="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:id="@+id/chemistCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/acme"
                android:text="Cust Code"
                android:textColor="#2CA631"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/chemistName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/acme"
                android:text="Cust Name"
                android:textColor="#2F81A6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/marketCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/acme"
                android:text="Market Code"
                android:textColor="@color/green1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/marketName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/acme"
                android:text="Market Name"
                android:textAlignment="center"
                android:textColor="#A42E56"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dopotDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Depot Desc"
                android:textColor="#673AB7"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/chemAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/acme"
                android:gravity="start"
                android:text="Address"
                android:textColor="#C26F54"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme"
                    android:text="Phone No"
                    android:textColor="#2CA631"
                    android:textSize="12sp" />

                <Button
                    android:layout_marginTop="@dimen/_6sdp"
                    android:id="@+id/contactUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/button_round"
                    android:fontFamily="@font/robotoregular"
                    android:padding="0dp"
                    android:text="Contact Update"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>