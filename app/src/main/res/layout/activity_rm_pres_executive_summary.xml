    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        android:background="@color/ef_white"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:layout_width="0dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:text="Base: "
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:fontFamily="@font/acme"
                    android:textColor="@color/colorAccentEditor"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:id= "@+id/mpo_base"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccentEditor"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:layout_width="0dp">


                <TextView
                    android:layout_width="fill_parent"
                    android:text="Share (%): "
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:fontFamily="@font/acme"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    tools:ignore="NestedWeights" />


                <TextView
                    android:layout_width="fill_parent"
                    android:id= "@+id/mpo_share"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    tools:ignore="NestedWeights" />




            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        android:background="@color/ef_white"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="0dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:text="@string/mis_company"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/acme"
                    android:textColor="@color/colorAccentEditor"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="fill_parent"
                    android:text="@string/pres_share"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/acme"
                    android:textColor="@color/blue"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="fill_parent"
                    android:text="@string/com_code"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/acme"
                    android:textColor="@color/green1"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="0dp">


                <TextView
                    android:layout_width="fill_parent"
                    android:text="@string/doctor_name"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/acme"
                    android:textColor="@color/colorAccentEditor"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:text="@string/base"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/green1"
                    android:fontFamily="@font/acme"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:text="@string/pres"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/acme"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="fill_parent"
                    android:text="@string/share_n"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/green1"
                    android:fontFamily="@font/acme"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >

        <ListView
            android:id="@+id/pListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:listSelector="@color/lightgray"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:focusable="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideInset"
            android:clickable="true"
            tools:ignore="NestedWeights"
            >
        </ListView>

        <ListView
            android:id="@+id/pListView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:listSelector="@color/lightgray"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:focusable="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideInset"
            android:clickable="true">
        </ListView>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/slistLayouttext3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorAccentEditor"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/detail_head3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="@string/doctor_share_details"
            android:textColor="@color/ef_white"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:typeface="normal"

            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="start"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:text="@string/serial"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/acme"
                android:textColor="@color/darkblue" />

            <TextView

                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/acme"
                android:textColor="@color/colorAccentEditor"

                android:text="SKU"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:layout_gravity="start"
                android:textAlignment="gravity"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/acme"
                android:textColor="@color/blue"
                android:text="No.of\nUnit"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginStart="10dp"
                android:textAlignment="gravity"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/green1"
                android:fontFamily="@font/acme"
                android:layout_marginLeft="0dp"
                android:text="Generic"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:textAlignment="gravity"
                android:layout_gravity="start"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/acme"
                android:text="@string/mis_company"
                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/slistLayout4"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        >

        <ListView
            android:id="@+id/pListView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:listSelector="@color/lightgray"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:focusable="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideInset"
            android:clickable="true" >
        </ListView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backbt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/dcr_page_button"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:onClick="finishActivity"
            android:soundEffectsEnabled="true"
            android:text="&lt;"
            android:textColor="#FFF"
            />





    </RelativeLayout>


</LinearLayout>





