<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/serial_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/serial"
                android:fontFamily="@font/acme"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/brand_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
               
                android:gravity="start"
                android:text="Brand Name"
                android:fontFamily="@font/acme"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/regular_prescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="regular\nprescription"
               
                android:gravity="start"
                android:fontFamily="@font/acme"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/rtarget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
               
                android:gravity="start"
                android:text="Sbt"
                android:visibility="gone"
                android:fontFamily="@font/acme"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/special_prescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="special\nprescription"
               
                android:gravity="start"
                android:visibility="gone"
                android:fontFamily="@font/acme"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/sgtarget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="special\nprescription"
               
                android:gravity="start"
                android:fontFamily="@font/acme"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/brandloyalty_prescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="special\nprescription"
               
                android:gravity="start"
                android:visibility="gone"
                android:textColor="@color/vergence"
                android:fontFamily="@font/acme"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/bltarget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="special\nprescription"
               
                android:gravity="start"

                android:textColor="@color/vergence"
                android:fontFamily="@font/acme"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/total_prescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="special\nprescription"
               
                android:gravity="start"

                android:fontFamily="@font/acme"
                android:textColor="@color/green"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/totaltarget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="special\nprescription"
               
                android:gravity="start"
                android:fontFamily="@font/acme"
                android:textColor="@color/green"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/mpo_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Number of Prescription"
               
                android:gravity="start"
                android:fontFamily="@font/acme"
                android:visibility="gone"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>