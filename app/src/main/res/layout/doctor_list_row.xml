<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/page_background"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:weightSum="9">

        <TextView
            android:id="@+id/doctorCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="Doctor \nCode"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="Doctor \nName"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/marketCode"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Market \nCode"
            android:textColor="@color/green1" />

        <TextView
            android:id="@+id/marketName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="Market \nName"
            android:textColor="@color/deeppurple"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/doctorDegree"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Degree"
            android:textColor="@color/ef_colorPrimaryDark" />

        <TextView
            android:id="@+id/drSpecialization"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="Specialization"
            android:textColor="@color/pink"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/drDesignation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:gravity="start"
            android:text="Designation"
            android:textColor="@color/green1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/doctorNop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/acme"
            android:gravity="start"
            android:text="NOP"
            android:textColor="@color/pink"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/drAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:fontFamily="@font/acme"
            android:gravity="start"
            android:text="Address"
            android:textColor="@color/blue"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>