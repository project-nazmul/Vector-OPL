<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        card_view:cardBackgroundColor="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="24">

            <TextView
                android:background="@drawable/textview_bg6"
                android:layout_gravity="center"
                android:id="@+id/serial"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/serial"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/mpo_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:lines="2"
                android:minLines="2"
                android:singleLine="false"
                android:text="Mpo"
                android:textColor="#B4476C"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/terriName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="center"
                android:text="Territory\nName"
                android:textColor="#E91E63"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/brand_target_quant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="target quant"
                android:textColor="#2CA631"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/amqnty_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="target val"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/salequant_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="salequant"
                android:textColor="#2CA631"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/salevalue_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="sale value"
                android:textColor="#FF9800"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/lmGrowth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="LM-Growth\n(%)"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/monGrowth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.9"
                android:gravity="center"
                android:text="M-Growth\n(%)"
                android:textColor="#673AB7"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/yearGrowth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.9"
                android:gravity="center"
                android:text="Y-Growth\n(%)"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/achivement_sale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="achivement"
                android:textColor="#2CA631"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>