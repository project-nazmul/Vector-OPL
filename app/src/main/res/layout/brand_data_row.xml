<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:weightSum="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/acme">

        <TextView
            android:id="@+id/brandName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Brand"
            android:textAlignment="textStart"
            android:textColor="#E91E63"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/valueShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Value\nShare"
            android:textColor="#4CAF50"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/vRankOpl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="V_Rank\n(OPL)"
            android:textColor="#FF5722"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/vRankNat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="V_Rank\n(NAT)"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/uniteShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Unite\nShare"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/uRankOpl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="U_Rank\n(OPL)"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/uRankNat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="U_Rank\n(NAT)"
            android:textAlignment="textEnd"
            android:textColor="#49189F"
            android:textSize="12dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>