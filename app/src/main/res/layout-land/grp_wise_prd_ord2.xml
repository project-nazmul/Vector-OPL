<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100" >

    <RelativeLayout
        android:id="@+id/searchbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:orientation="horizontal"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        >

        <EditText
            android:id="@+id/p_search"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@android:drawable/editbox_background"
            android:ems="5"
            android:focusable="true"
            android:gravity="center"
            android:visibility="gone"
            android:hint="Search for Product"
            android:inputType="textAutoComplete"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@android:color/holo_blue_dark">


        </EditText>


        <TextView
            android:id="@+id/todate"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@android:drawable/editbox_background"
            android:ems="5"
            android:focusable="true"
            android:gravity="center"
            android:hint="Select Date"
            android:inputType="textAutoComplete"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@android:color/holo_blue_dark"

            />


        <Button
            android:id="@+id/submitBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/submit_btton_selector"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:text="show"
            android:textColor="#FFF"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute" />



        <TextView
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@android:drawable/editbox_background"
            android:ems="5"
            android:focusable="true"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:gravity="center"
            android:visibility="gone"
            android:text="Opsonin Product List"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@android:color/holo_blue_dark"/>






        <TextView
            android:id="@+id/mic"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:textAlignment="center"
            android:visibility="gone"
            android:background="@drawable/white_button_selector"
            android:layout_width="27dp"/>



        <TextView
            android:id="@+id/showorders"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="0dp"
            android:background="@drawable/dcr_page_button"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:text=""
            android:textColor="#FFF"
            android:textSize="25sp"
            android:visibility="gone"
            tools:ignore="HardcodedText,UnusedAttribute"/>



        <TextView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="0dp"
            android:background="@drawable/dcr_page_button"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:text=""
            android:textColor="#FFF"
            android:textSize="25sp"
            android:visibility="gone"
            tools:ignore="HardcodedText,UnusedAttribute" />



    </RelativeLayout>





    <LinearLayout
        android:id="@+id/slistLayout1"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/rname"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:layout_weight="0.6"
            android:text="Region"
            android:textColor="@color/blue"
            />

        <TextView
            android:text="Doctor Call"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:layout_marginLeft="10px"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/bg_gradient_end"
            />

        <TextView
            android:text="Chemist Call "
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:clickable="true"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="@color/blue"

            />




        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:text="Sample"
            android:textColor="@color/orangered"

            />
        <TextView

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:gravity="center"
            android:text="PPM"
            android:textColor="@color/pink"

            />

        <TextView

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:gravity="center"
            android:text="Gift"
            android:textColor="@color/deeppurple"
            />




    </LinearLayout>



    <LinearLayout
        android:id="@+id/polistLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:layout_margin="@dimen/_1sdp"
        android:weightSum="20" >

        <TextView
            android:id="@+id/hserial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/serial"
            android:textColor="@color/darkblue" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="MPO\ncode"
            android:visibility="gone"
            android:textColor="@color/blue" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Product\nname"
            android:textColor="@color/colorAccent" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Pack\nsize"
            android:textColor="@color/green1" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Prod\ngroup"
            android:textColor="@color/deeppurple" />




        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="gone"
            android:text="Prod\ncode"
            android:textColor="@color/ef_colorPrimaryDark" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Order\nQnty"
            android:textColor="@color/pink" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="start"
            android:text="Order\nValue"
            android:textColor="@color/green1" />
    </LinearLayout>






    <ListView
        android:id="@+id/pListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="95.00"
        android:listSelector="@drawable/active"
        android:clickable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/_1sdp"
        android:focusable="true" >
    </ListView>







    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backbt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dcr_page_button"

            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:onClick="finishActivity"
            android:soundEffectsEnabled="true"
            android:text="&lt;"
            android:textColor="#FFF"
            android:textSize="25sp"
            tools:ignore="HardcodedText,UnusedAttribute" />


    </RelativeLayout>

</LinearLayout>