<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        card_view:cardBackgroundColor="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        card_view:cardCornerRadius="0dp"
        card_view:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="24">

            <TextView
                android:background="@drawable/textview_bg1"
                android:id="@+id/serial"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/serial"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/mpo_ter"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:lines="2"
                android:minLines="2"
                android:singleLine="false"
                android:text="Mpo"
                android:textColor="#2CA631"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/mpo_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:lines="2"
                android:minLines="2"
                android:singleLine="false"
                android:text="Mpo"
                android:textColor="#2F81A6"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="Target"
                android:textColor="#775AAD"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/amqnty2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="Sale"
                android:textColor="#4CAF50"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/amvalue2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2.5"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="Achievment"
                android:textColor="#9C27B0"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/growth_mon"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2.2"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="Monthly\nGrowth"
                android:textColor="#673AB7"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/growth_col"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2.3"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="Yearly\nGrowth"
                android:textColor="#A42E56"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/y_growth"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2.2"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="Y-Growth"
                android:textColor="#4CAF50"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/amachivement1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2.3"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:text="To date sale"
                android:textColor="#C26F54"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>