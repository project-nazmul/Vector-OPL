<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/processTicketLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false"
                android:hint="serial" />

            <TextView
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_border"
                android:textSize="9sp"
                android:id="@+id/notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/serial"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                android:focusable="false"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="Title"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/order_qnty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_weight="0"
                android:clickable="false"
                android:focusable="false"
                android:gravity="right"
                android:hint="01-Aug-2019"
                android:inputType="number"
                android:minHeight="48dp"
                android:textAlignment="gravity"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_qnty"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/_4sdp"
                android:text="Topic Details" />

            <View
                android:background="#F8D3D3"
                android:layout_below="@id/topic"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

            <TextView
                android:id="@id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topic"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/_4sdp"
                android:text="message" />

            <TextView
                android:id="@+id/feedback_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/_4sdp"
                android:text="feedback_title" />

            <TextView
                android:id="@+id/feedback_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feedback_title"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/_4sdp"
                android:text="feedback_details" />

            <TextView
                android:visibility="gone"
                android:id="@+id/admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feedback_details"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/_4sdp"
                android:text="Admin Response" />

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/_4sdp"
                android:layout_below="@id/admin"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:cropToPadding="true"
                android:layout_gravity="center"
                android:visibility="visible" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>






