<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/alert_light_frame"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/user_show1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:ems="10"
            android:fontFamily="@font/acme"
            android:text="Vector Master Code"
            android:visibility="visible"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>

    <EditText
        android:id="@+id/p_search"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:background="@android:drawable/editbox_background"
        android:ems="5"
        android:focusable="true"
        android:gravity="center"
        android:textSize="@dimen/_12sdp"
        android:hint="@string/search_for_usercode"
        android:textColor="@color/colorAccent">
        <requestFocus />
    </EditText>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:id="@+id/headerScroll"
        android:layout_height="@dimen/_40sdp">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/lightgray"
            android:layout_width="wrap_content"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="20dp"
                android:id="@+id/masterSl"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Sl."
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/quiz"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="50dp"
                android:id="@+id/masterCode"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Code"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="80dp"
                android:id="@+id/masterRole"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="User Role"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@color/blue"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="50dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:id="@+id/masterEmpNo"
                android:text="Emp\nCode"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@color/blue"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="80dp"
                android:id="@+id/masterTerriName"
                android:text="Terri Name"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@android:color/holo_red_dark"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="80dp"
                android:id="@+id/masterEmpName"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Emp Name"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="60dp"
                android:id="@+id/masterDepotDsc"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Depo"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/vector_logo_color"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvCompany"
        android:layout_height="0dp"
        android:layout_weight="98">
    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backbt"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dcr_page_button"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:onClick="finishActivity"
            android:soundEffectsEnabled="true"
            android:text="&lt;"
            android:textColor="#FFF"
            android:textSize="25sp"
            tools:ignore="HardcodedText,UnusedAttribute" />
    </RelativeLayout>
</LinearLayout>