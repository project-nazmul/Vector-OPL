<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="4dp"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="1"
            android:enabled="true"
            android:clickable="false"
            android:paddingStart="10dp"
            android:selectAllOnFocus="true"
            android:text="RM wise Dcr Followup"
            android:fontFamily="cursive"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/_4sdp"
        android:id="@+id/date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="98">

        <TextView
            android:id="@+id/fromdate"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:enabled="true"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:selectAllOnFocus="true"
            android:text="From Date"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/todate"
            android:layout_width="120sp"
            android:layout_height="42dp"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:enabled="true"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:selectAllOnFocus="true"
            android:text="To Date"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:background="@drawable/submit_btton_selector"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:text="show"
            android:textColor="#FFF"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slistLayout1"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rname"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:layout_weight="0.6"
            android:text="Region"
            android:textColor="@color/blue" />

        <TextView
            android:text="Doctor Call"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:layout_marginLeft="10px"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/bg_gradient_end" />

        <TextView
            android:text="Chemist Call "
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:clickable="true"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="@color/blue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:text="Sample"
            android:textColor="@color/orangered" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:gravity="center"
            android:text="PPM"
            android:textColor="@color/pink" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:gravity="center"
            android:text="Gift"
            android:textColor="@color/deeppurple" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slistLayout"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDEDED"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="start"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:text="Sl"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/rm_code"
            android:layout_gravity="start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:text="Region"
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:text="No of Doc\nCall"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginLeft="0px"
            android:layout_gravity="start"
            android:textAlignment="gravity"
            android:textColor="@color/bg_gradient_end"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:text="Doc call\nLast\nDay"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginLeft="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:text="No of\nChem Call"
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:textSize="@dimen/_8sdp"
            android:layout_gravity="center"
            android:text="Chem \ncall\nlast day"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:layout_marginTop="0dp"
            android:layout_gravity="start"
            android:text="No of\norder"
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:layout_marginTop="0dp"
            android:layout_gravity="start"
            android:text="Last day\norder"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:text="Sample\nallocate"
            android:textColor="@color/orangered"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="Sample\ngiven"
            android:textAlignment="gravity"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:text="PPM\nallocate"
            android:textColor="@color/pink"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:text="PPM\ngiven"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:text="Gift\nallocate"
            android:textColor="@color/deeppurple"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:text="Gift\ngiven"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>

    <ListView
        android:id="@+id/pListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="95"
        android:listSelector="@drawable/active"
        android:clickable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/_1sdp"
        android:focusable="true" >
    </ListView>

    <LinearLayout
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:id="@+id/listLayout"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8E8E8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sl_0"
            android:layout_gravity="start"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:text="TOTAL"
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/doc_call_total"
            android:text=""
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_gravity="start"
            android:textAlignment="gravity"
            android:textColor="@color/bg_gradient_end"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/doc_call_last_Day"
            android:text=""
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/chem_call_total"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/chem_call_last_Day"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:textSize="@dimen/_8sdp"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/no_of_order"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:layout_marginTop="0dp"
            android:layout_gravity="start"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/last_day_order"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:textAlignment="gravity"
            android:layout_marginTop="0dp"
            android:layout_gravity="start"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/sample_allocate"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:text=""
            android:textColor="@color/orangered"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/sample_given"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text=""
            android:textAlignment="gravity"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/ppm_allocate"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:text=""
            android:textColor="@color/pink"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/ppm_given"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:text=""
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:paddingEnd="@dimen/_4sdp"
            android:textStyle="bold"
            android:id="@+id/gift_allocate"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:text=""
            android:textColor="@color/deeppurple"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:paddingEnd="@dimen/_4sdp"
            android:textStyle="bold"
            android:id="@+id/gift_given"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="0dp"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:text=""
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>

    <RelativeLayout
        android:paddingTop="@dimen/_2sdp"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_32sdp">

        <Button
            android:id="@+id/backbt"
            android:layout_width="50sp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dcr_page_button"
            android:hapticFeedbackEnabled="true"
            android:onClick="finishActivity"
            android:soundEffectsEnabled="true"
            android:text="&lt;"
            android:textColor="#FFF"
            android:textSize="25sp"
            tools:ignore="HardcodedText,UnusedAttribute" />
    </RelativeLayout>
</LinearLayout>