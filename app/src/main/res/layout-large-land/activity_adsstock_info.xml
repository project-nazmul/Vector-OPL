<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="12"
        android:background="@drawable/dcr_border"
        android:id="@+id/layoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ff_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:focusable="true"
            android:text="Product"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_8sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <TextView
            android:id="@+id/ff_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3"
            android:focusable="true"
            android:text="Pack\nSize"
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:text="Target"
                    android:textAlignment="center"
                    android:textColor="@color/bg_gradient_end"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#424242"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="Eve"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:text="Planned to Visit"
                    android:textAlignment="center"
                    android:textColor="@color/bg_gradient_end"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#424242"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:id="@+id/planned_todDoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="0px"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:text="Tot_Doc"
                    android:textColor="@color/bg_gradient_end"
                    android:textSize="@dimen/_8sdp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#424242"/>

                <TextView
                    android:id="@+id/planned_morn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="Morn"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/_8sdp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#424242"/>

                <TextView
                    android:id="@+id/planned_eve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="Eve"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:text="Visited"
                    android:textAlignment="center"
                    android:textColor="@color/bg_gradient_end"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#424242"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TextView
                    android:id="@+id/visited_todDoc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="0px"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:text="Tot_Doc"
                    android:textColor="@color/bg_gradient_end"
                    android:textSize="@dimen/_8sdp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#424242"/>

                <TextView
                    android:id="@+id/visited_morn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="Morn"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/_8sdp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#424242"/>

                <TextView
                    android:id="@+id/visited_eve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="Eve"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <TextView
            android:id="@+id/not_visited"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:text="Not Visited"
            android:textAlignment="gravity"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_8sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <TextView
            android:id="@+id/visit_percentage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="Visit %"
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>
</LinearLayout>