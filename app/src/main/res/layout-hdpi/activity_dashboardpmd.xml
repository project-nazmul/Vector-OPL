                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:text="8"
                            android:textColor="@android:color/black"
                            android:textSize="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
