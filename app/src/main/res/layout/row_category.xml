<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_4sdp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="11"
            android:background="@android:color/transparent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/row_categoryname_textview_sl"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:text="Sl"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible"
                android:paddingLeft="@dimen/_2sdp"
                android:textColor="@color/darkblue"
                android:textAppearance="?android:attr/textAppearanceMedium"/>



            <TextView
                android:id="@+id/row_categoryname_textview"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:text="Doc code"
                android:textStyle="bold"
                android:layout_weight="3"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible"
                android:textColor="#009688"
                android:textAppearance="?android:attr/textAppearanceMedium"/>


            <TextView
                android:id="@+id/row_categoryname_textview2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:text="Doc Name"
                android:textColor="@color/ef_colorPrimaryDark"
                android:textStyle="bold"
                android:layout_weight="5"
                android:textSize="@dimen/_10sdp"
                android:textAppearance="?android:attr/textAppearanceMedium" />






            <EditText
                android:id="@+id/row_categoryname_textview3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:text="Phone number"
                android:textColor="@color/blue"
                android:drawablePadding="@dimen/_12sdp"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:layout_weight="0"
                android:background="@android:drawable/editbox_background"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/_10sdp"
                android:inputType="number"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium" />



            <CheckBox
                android:id="@+id/row_category_checkbox"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>