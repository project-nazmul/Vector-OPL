<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="?android:colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/productLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <AutoCompleteTextView
                    android:id="@+id/autoProductList"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginLeft="0sp"
                    android:layout_marginRight="0sp"
                    android:layout_marginBottom="0sp"
                    android:layout_weight="8.7"
                    android:background="@android:drawable/editbox_background"
                    android:drawableStart="@drawable/ic_medicine"
                    android:ems="0"
                    android:hint="Select Product"
                    android:imeOptions="flagNoExtractUi"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"
                    android:textSize="@dimen/_8sdp" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3">

                    <Button
                        android:id="@+id/showBtn"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/submit_btton_selector"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:soundEffectsEnabled="true"
                        android:text="show"
                        android:textAllCaps="true"
                        android:textColor="#FFF"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:includeFontPadding="false"
            android:text="Product Offer List"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:fontFamily="@font/acme"
            android:textColor="#25B6D2"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/serial"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:focusable="true"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/serial"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/darkblue" />

                <TextView
                    android:id="@+id/p_code1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:focusable="true"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:text="Pcode"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/product_name_admin"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="8"
                    android:focusable="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:focusableInTouchMode="true"
                    android:text="@string/pn"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/pack_size"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:focusable="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:focusableInTouchMode="true"
                    android:text="Pack\nsize"
                    android:visibility="gone"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/green1" />

                <TextView
                    android:id="@+id/brand_code"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:focusable="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:focusableInTouchMode="true"
                    android:text="Brand\ncode"
                    android:visibility="gone"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/deeppurple" />

                <TextView
                    android:id="@+id/tp"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="8"
                    android:focusable="true"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:text="Current Offer"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/ef_colorPrimaryDark" />

                <TextView
                    android:id="@+id/TP_VT"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:focusable="true"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:text="VAT"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorAccent"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ppm_error"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:focusable="true"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textSize="@dimen/_6sdp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mrp_val"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="true"
                    android:hint="MRP"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColorHint="@color/green1"
                    android:textColor="@color/green1"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ListView
            android:id="@+id/pListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
</LinearLayout>
