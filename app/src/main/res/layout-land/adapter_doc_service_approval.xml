<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:weightSum="22">

            <TextView
                android:id="@+id/row_categoryname_textview_sl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/acme"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/row_categoryname_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Venue\name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/row_categoryname_textview6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Venue\ncharge"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/vector_logo_color"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/row_categoryname_textview2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Participent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/vector_logo_color"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/row_categoryname_textview8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="2"
                android:inputType="number"
                android:text="RC"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/vector_logo_color"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/row_categoryname_textview9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="number"
                android:text="DOC\n CHEMIST"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/vector_logo_color"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/row_categoryname_textview10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="IN\nHOUSE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/row_categoryname_textview4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Food\nBudget"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/row_categoryname_textview5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Miscelleneous"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/row_categoryname_textview3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="Total\nBudget"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/row_categoryname_textview7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="3"
                android:singleLine="false"
                android:text="MPO"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/row_category_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>