    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:padding="@dimen/_6sdp"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_weight="2"
        android:visibility="visible">


        <EditText
            android:id="@+id/p_search"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="4"
            android:textAlignment="center"
            android:hint="@string/search_for_product"
            android:background="@android:drawable/editbox_background"
            android:inputType="textNoSuggestions"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            />


        <TextView
            android:id="@+id/showorders"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/dcr_page_button"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:text=""
            android:textColor="#FFF"
            android:textSize="25sp"
            tools:ignore="HardcodedText,UnusedAttribute" />
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@drawable/dcr_page_button"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:text=""
            android:textColor="#FFF"
            android:textSize="25sp"
            tools:ignore="HardcodedText,UnusedAttribute" />
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent" />

    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="5dp"
        android:weightSum="6"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:weightSum="16" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SL "
                android:fontFamily="@font/acme"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/darkblue"
                android:visibility="visible"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Promo\nname"
                android:fontFamily="@font/acme"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorAccentEditor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Total"
                android:fontFamily="@font/acme"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/vector_logo_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Remain"
                android:fontFamily="@font/acme"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/vector_logo_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Promo\nfor"
                android:fontFamily="@font/acme"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorAccentEditor" />

            <TextView
                android:id="@+id/hqnty1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="start"
                android:fontFamily="@font/acme"
                android:textSize="@dimen/_10sdp"
                android:text="Quantity"
                android:textColor="@color/colorAccent" />
        </LinearLayout>



