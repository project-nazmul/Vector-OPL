<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/user_show1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:ems="10"
                android:fontFamily="@font/acme"
                android:text="MSD Program Followup"
                android:visibility="visible"
                android:gravity="center"
                android:textColor="@color/colorAccentEditor"
                />

            <EditText
                android:id="@+id/ed_date"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="0sp"
                android:layout_marginRight="0sp"
                android:layout_marginBottom="0sp"
                android:layout_weight="2"
                android:background="@android:drawable/editbox_background"
                android:drawableStart="@drawable/ic_today_1"
                android:ems="10"
                android:enabled="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:text="@string/select_month"
                android:textSize="@dimen/_10sdp"
                tools:ignore="RtlSymmetry"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:textColor="@color/vector_logo_color"
                android:textColorHint="@color/darkblue"
                android:fontFamily="@font/acme"
                android:textStyle="normal"
                />


            <Button
                android:id="@+id/submitBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/submit_btton_selector"
                android:gravity="center"
                android:hapticFeedbackEnabled="true"
                android:soundEffectsEnabled="true"
                android:text="show"
                android:textColor="#FFF"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:id="@+id/headerScroll"
        android:layout_height="@dimen/_40sdp">

        <LinearLayout android:orientation="horizontal"
            android:background="@color/lightgray"
            android:layout_width="wrap_content"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="@dimen/_30sdp"
                android:id="@+id/sserial"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Sl."
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/quiz"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/mpo_code"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Req\nNo"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/sproduct_name"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Issue\nDate"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@color/colorAccentEditor"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="@dimen/cell_width"
                android:layout_marginStart="@dimen/_5sdp"
                android:id="@+id/ssellvelue"
                android:text="Program\nDate"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@color/colorAccentEditor"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_width="@dimen/_80sdp"
                android:id="@+id/sqnty1"
                android:text="Program\nTime"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:gravity="center|start"
                android:textColor="@color/green"
                android:layout_height="match_parent"/>



            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/gval"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Institute"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/week1"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Venue"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/vector_logo_color"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/week2"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Territory"
                android:textAllCaps="true"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/vector_logo_color"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/week3"
                android:gravity="center|start"

                android:layout_marginStart="@dimen/_5sdp"
                android:text="ASM"
                android:textSize="@dimen/_8sdp"

                android:textAllCaps="true"
                android:textColor="@color/vector_logo_color"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="@dimen/cell_width"
                android:id="@+id/week4"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="SM"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/vector_logo_color"
                android:layout_height="match_parent"/>


            <TextView
                android:id="@+id/achivement_sales_admin"
                android:layout_width="@dimen/cell_width"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="MSM"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:layout_height="match_parent" />

            <TextView

                android:layout_width="@dimen/cell_width"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="MSD"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="@dimen/cell_width"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="GM"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="@dimen/cell_width"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="F A"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="@dimen/cell_width"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Challan"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="@dimen/cell_width"
                android:gravity="center|start"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Cost"
                android:textSize="@dimen/_8sdp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:layout_height="match_parent" />

        </LinearLayout>

    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvCompany"
        android:layout_height="0dp"
        android:layout_weight="98"
        >
    </androidx.recyclerview.widget.RecyclerView>




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backbt"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dcr_page_button"

            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:onClick="finishActivity"
            android:soundEffectsEnabled="true"
            android:text="&lt;"
            android:textColor="#FFF"
            android:textSize="25sp"
            tools:ignore="HardcodedText,UnusedAttribute" />


    </RelativeLayout>

</LinearLayout>