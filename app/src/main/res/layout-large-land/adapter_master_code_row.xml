<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/lightgray"
    android:orientation="horizontal"
    android:padding="@dimen/_8sdp"

    android:layout_marginTop="@dimen/_2sdp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/serial"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="Serial"
        android:textColor="@color/quiz"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/mpocode"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="Mpo\ncode"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/month"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="Month"
        android:textColor="@color/blue"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/sample_name"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="Sample\nName"
        android:textColor="@color/blue"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/pack_size"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="Pack\nSize"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="Type"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/week1"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="week1"
        android:textColor="@color/vector_logo_color"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/week2"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="week2"
        android:textColor="@color/vector_logo_color"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/week3"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="week3"
        android:textColor="@color/vector_logo_color"
        android:textSize="@dimen/_8sdp" />


    <TextView
        android:id="@+id/week4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="week4"
        android:visibility="gone"
        android:textColor="@color/vector_logo_color"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:gravity="start"
        android:text="Total"
        android:textAlignment="textEnd"
        android:textColor="@color/colorAccentEditor"
        android:textSize="@dimen/_8sdp" />


</LinearLayout>