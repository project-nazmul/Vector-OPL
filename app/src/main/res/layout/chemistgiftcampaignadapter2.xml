<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">


        <LinearLayout
            android:layout_weight="8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/serial"
                android:layout_gravity="start"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:text="@string/serial"
                android:visibility="gone"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/darkblue" />

            <TextView
                android:id="@+id/promo_item_code"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginStart="10px"
                android:layout_gravity="start"
                android:textAlignment="gravity"
                android:text="Mpo"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="10px" />

            <TextView
                android:id="@+id/qnty_rm_gift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginStart="10dp"
                android:textAlignment="gravity"
                android:layout_gravity="start"
                android:text="brand"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorAccentEditor"
                android:layout_marginLeft="0dp" />

            <TextView
                android:id="@+id/dcc_ppm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:textAlignment="gravity"
                android:layout_gravity="start"
                android:text="ppm"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/green1" />


            <TextView
                android:id="@+id/value_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:textAlignment="gravity"
                android:layout_marginTop="0dp"
                android:layout_gravity="start"
                android:text="ratio"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/value_alloc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginTop="0dp"
                android:textAlignment="gravity"
                android:layout_gravity="start"
                android:text="alloca"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/green1" />

            <TextView
                android:id="@+id/value_issue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginTop="0dp"
                android:textAlignment="gravity"
                android:layout_gravity="start"
                android:text="issue"
                android:visibility="gone"
                android:textColor="@color/deeppurple" />


            <TextView
                android:id="@+id/value_rest"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:clickable="false"
                android:focusable="false"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginTop="0dp"
                android:textAlignment="gravity"
                android:layout_gravity="start"
                android:text="rest"
                android:visibility="gone"
                android:textColor="@color/pink" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

