<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/processTicketLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:hint="serial"
                android:visibility="gone" />

            <TextView
                android:id="@+id/notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/serial"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_border"
                android:clickable="false"
                android:focusable="false"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/_6sdp"
                android:text="Title"
                android:textColor="@color/green1"
                android:textSize="10sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="visible" />

            <TextView
                android:fontFamily="@font/acme"
                android:id="@+id/order_qnty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notice_title"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                android:focusable="false"
                android:gravity="end"
                android:hint="01-Aug-2019"
                android:inputType="number"
                android:textAlignment="gravity"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_qnty"
                android:clickable="false"
                android:focusable="false"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="Topic Details"
                android:textStyle="bold" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/topic"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:background="@color/green1" />

            <TextView
                android:id="@id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/_4sdp"
                android:text="message"
                android:visibility="gone" />

            <TextView
                android:textSize="14sp"
                android:layout_below="@+id/view"
                android:id="@+id/feedback_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:paddingTop="@dimen/_2sdp"
                android:text="feedback_title" />

            <TextView
                android:textSize="14sp"
                android:id="@+id/feedback_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feedback_title"
                android:layout_marginBottom="12dp"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/_4sdp"
                android:text="feedback_details" />

            <TextView
                android:id="@+id/admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feedback_details"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/_4sdp"
                android:text="Admin Response"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/admin"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:cropToPadding="true"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>






