<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:id="@+id/productName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:focusable="true"
                android:gravity="center"
                android:text="Product"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/packSize"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Pack\nSize"
                android:textColor="@color/green1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/freeStock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center"
                android:text="Free\nStock"
                android:textColor="@color/gallan"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/depotStock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center"
                android:text="Depot\nStock"
                android:textColor="@color/green1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/csStock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center"
                android:text="CS\nStock"
                android:textColor="@color/deeppurple"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/transit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center"
                android:text="Transit"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/fgsProd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center"
                android:text="FGS"
                android:textColor="@color/green1"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/curTarget"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Current\nTarget"
                android:textColor="@color/blue"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/curMonSale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cur Mon\nSale"
                android:textColor="@color/orangered"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/preMonSale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sale 2"
                android:textColor="@color/base"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/pre2MonSale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sale 3"
                android:textColor="@color/deeppurple"
                android:textSize="@dimen/_8sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>