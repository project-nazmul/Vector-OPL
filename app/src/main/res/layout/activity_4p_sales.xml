<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeef"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="100"
        tools:context=".pmdVector.sales_4p.Activity_4p_Sales"
        android:id="@+id/ff_contact_layout">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview4"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="7"
                android:gravity="center"
                android:background="#80D8FF"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/mspinner1"
                    android:layout_width="0dp"
                    android:layout_height="57dp"
                    android:layout_weight="1"
                    app:ms_hint="Select Month"
                    app:ms_hint_color="@color/colorAccentEditor"
                    app:ms_text_color="@color/colorAccentEditor" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />


                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/mspinner2"
                    android:layout_width="0dp"
                    android:layout_height="57dp"
                    android:layout_weight="1"
                    app:ms_hint="Cycle"
                    app:ms_hint_color="@color/colorAccentEditor"
                    app:ms_text_color="@color/colorAccentEditor" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <Button
                android:id="@+id/backbt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/dcr_page_button"
                android:gravity="center"
                android:hapticFeedbackEnabled="true"
                android:onClick="finishActivity"
                android:soundEffectsEnabled="true"
                android:text="Back"
                android:textColor="#FFF"
                android:textSize="@dimen/_5sdp"
                android:layout_alignParentLeft="true"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/submit_btton_selector"
                android:gravity="center"
                android:hapticFeedbackEnabled="true"
                android:soundEffectsEnabled="true"
                android:text="show"
                android:textColor="#FFF"
                android:textSize="@dimen/_5sdp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,UnusedAttribute" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:fontFamily="@font/acme"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="4dp"
            android:id="@+id/cardview_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acme"
                android:background="#FFFF8D">

                <TextView
                    android:id="@+id/txt_col1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Brand"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textColor="#E91E63" />
                <TextView
                    android:id="@+id/txt_col2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="left"
                    android:textColor="#4CAF50"
                    android:textSize="12dp"
                    android:text="Field Force Name" />
                <TextView
                    android:id="@+id/txt_col3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="left"
                    android:textColor="#FF5722"
                    android:textSize="12dp"
                    android:text="Employee name" />
                <TextView
                    android:id="@+id/txt_col4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textAlignment="center"
                    android:textColor="#3F51B5"
                    android:textSize="12dp"
                    android:text="Contact no." />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_title"
            android:background="@android:color/white"
            android:divider="@android:color/transparent"
            android:padding="4dp"
            android:scrollbars="vertical">
        </androidx.recyclerview.widget.RecyclerView>
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:fontFamily="@font/acme"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp"
        android:id="@+id/cardview_title_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/acme"
            android:background="#B9F6CA">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Brand"
                android:textSize="12dp"
                android:textAlignment="center"
                android:textColor="#E91E63" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="left"
                android:textColor="#4CAF50"
                android:textSize="12dp"
                android:text="Field Force Name" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="left"
                android:textColor="#FF5722"
                android:textSize="12dp"
                android:text="Employee name" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp"
                android:text="Contact no." />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_title"
        android:background="@android:color/white"
        android:divider="@android:color/transparent"
        android:padding="4dp"
        android:scrollbars="vertical">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:fontFamily="@font/acme"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp"
        android:id="@+id/cardview_title3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/acme"
            android:background="#6FC0A5F1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Brand"
                android:textSize="12dp"
                android:textAlignment="center"
                android:textColor="#E91E63" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="left"
                android:textColor="#4CAF50"
                android:textSize="12dp"
                android:text="Field Force Name" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="left"
                android:textColor="#FF5722"
                android:textSize="12dp"
                android:text="Employee name" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp"
                android:text="Contact no." />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_title"
        android:background="@android:color/white"
        android:divider="@android:color/transparent"
        android:padding="4dp"
        android:scrollbars="vertical">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:fontFamily="@font/acme"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="4dp"
        android:id="@+id/cardview_title4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/acme"
            android:background="#FF80AB">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="Brand"
                android:textSize="12dp"
                android:textAlignment="center"
                android:textColor="#E91E63" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="left"
                android:textColor="#4CAF50"
                android:textSize="12dp"
                android:text="Field Force Name" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="left"
                android:textColor="#FF5722"
                android:textSize="12dp"
                android:text="Employee name" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="12dp"
                android:text="Contact no." />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_title"
        android:background="@android:color/white"
        android:divider="@android:color/transparent"
        android:padding="4dp"
        android:scrollbars="vertical">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>

