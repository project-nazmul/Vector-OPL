<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#F8F8F8" />

      <stroke
          android:width="0dp"
          android:color="#008080" />
     
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp" />
    </shape>
  </item>

  <item>
    <shape>
      <gradient
          android:startColor="#F8F8F8"
          android:endColor="#FFFFFF"
          android:angle="270" />

      <stroke
          android:width="1dp"
          android:color="#fff" />
    
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp" />
    </shape>
  </item>
</selector>