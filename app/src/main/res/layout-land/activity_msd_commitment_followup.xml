<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100"
    tools:context=".msd_doc_support.MSDCommitmentFollowup">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:background="@color/lightgray"
                android:layout_marginEnd="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_48sdp"
                android:id="@+id/user_show1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:textStyle="bold"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:text="MSD Program\nCommitment Follow-up"
                android:textColor="@color/colorAccentEditor"
                android:visibility="visible" />

            <EditText
                android:id="@+id/ed_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="0sp"
                android:layout_marginRight="0sp"
                android:layout_marginBottom="0sp"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background"
                android:drawableStart="@drawable/ic_today_1"
                android:ems="10"
                android:drawablePadding="@dimen/_4sdp"
                android:enabled="true"
                android:fontFamily="@font/acme"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:selectAllOnFocus="true"
                android:text="@string/select_month"
                android:textColor="@color/vector_logo_color"
                android:textColorHint="@color/darkblue"
                android:textSize="@dimen/_10sdp"
                android:textStyle="normal"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp">

                <Button
                    android:id="@+id/showBtn"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/p_background"
                    android:gravity="center"
                    android:hapticFeedbackEnabled="true"
                    android:soundEffectsEnabled="true"
                    android:text="&lt;"
                    android:textColor="#FFF"
                    android:textSize="@dimen/_20sdp" />

                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dcr_page_button"
                    android:gravity="center"
                    android:hapticFeedbackEnabled="true"
                    android:soundEffectsEnabled="true"
                    android:text="&lt;"
                    android:textColor="#FFF"
                    android:textSize="25sp"
                    android:layout_marginStart="@dimen/_10sdp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_weight="16"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@drawable/dcr_border"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp">

        <TextView
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:id="@+id/req_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Req No"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <TextView
            android:id="@+id/program_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Program\nDate"
            android:textAllCaps="true"
            android:textColor="#D500F9"
            android:textSize="@dimen/_8sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <TextView
            android:id="@+id/program_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Program\nTime"
            android:textAllCaps="true"
            android:textColor="@color/colorAccentEditor"
            android:textSize="@dimen/_8sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <TextView
            android:id="@+id/institute_name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Institute"
            android:textAllCaps="true"
            android:textColor="@color/green"
            android:textSize="@dimen/_8sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <TextView
            android:id="@+id/venue_name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Venue"
            android:textAllCaps="true"
            android:textColor="@color/orangered"
            android:textSize="@dimen/_8sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <TextView
            android:id="@+id/region_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Region"
            android:textAllCaps="true"
            android:textColor="@color/vector_logo_color"
            android:textSize="@dimen/_8sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <TextView
            android:id="@+id/product_coverage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Product\nCoverage"
            android:textAllCaps="true"
            android:textColor="#D500F9"
            android:textSize="@dimen/_8sdp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#424242"/>

        <TextView
            android:id="@+id/commitment_duration"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Commitment\nDuration"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMSDCommitment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="82"/>
</LinearLayout>