<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="5dp">

        <TextView
            android:id="@+id/txt_questionID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/testcolorblue"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/testcolorblue"
            android:text="OFFICE NAME"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/txt_questionID"
            tools:ignore="UnknownId"
            android:layout_toRightOf="@+id/txt_questionID"
            android:textStyle="bold"/>
        <RadioGroup
            android:id="@+id/rg_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_questions"
            android:layout_marginTop="@dimen/_50sdp"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_OptionA"
                android:text="OptionA" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_OptionB"
                android:text="OptionB" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_OptionC"
                android:text="OptionC" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_OptionD"
                android:text="OptionD" />
        </RadioGroup>
        </androidx.cardview.widget.CardView>




    </RelativeLayout>
</LinearLayout>
