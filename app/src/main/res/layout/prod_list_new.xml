<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="26"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/serial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/serial"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLines="10"
                android:singleLine="false"
                android:text="@string/pn"
                android:textColor="@color/blue"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/pack_size"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLines="6"
                android:singleLine="false"
                android:text="Packsize"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/p_team_type"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLines="3"
                android:singleLine="false"
                android:text="p_team_type"
                android:textColor="@color/bg_gradient_end"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/ppm_error"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLines="3"
                android:singleLine="false"
                android:textSize="@dimen/_6sdp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/order_qnty"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:background="#00000000"
                android:clickable="true"
                android:digits="0123456789"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Quant"
                android:inputType="numberDecimal"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/darkblue"
                android:textColorHint="@color/deeppurple"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>