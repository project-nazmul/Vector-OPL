<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">

    <TextView
        android:id="@+id/appname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/acme"
        android:gravity="center_horizontal"
        android:text="@string/company"
        android:textColor="#3c4c93"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appname"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/user_profile_photo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/icon_vector"
        android:layout_marginBottom="20dp"
        tools:ignore="ContentDescription"
        />



    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="login_or_password_is_incorrect"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/OutlinedRoundedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_person_outline"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:hint="User Code"
                android:textColor="@android:color/black"
                android:inputType="textPersonName"
                android:textColorHint="#3c4c93"
                android:textColorLink="#000000"
                android:textSize="16sp"
                android:importantForAutofill="no" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/OutlinedRoundedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            >

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_lock_outline"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:hint="@string/password"
                android:textColor="@android:color/black"
                android:inputType="textPassword"
                android:textColorHint="#3c4c93"
                android:textColorHighlight="#3c4c93"
                android:textColorLink="#006199"
                android:textSize="16sp"
                android:importantForAutofill="no" />
        </com.google.android.material.textfield.TextInputLayout>



        <CheckBox
            android:id="@+id/rememberMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="remember_me"
            android:visibility="gone"
            android:textColor="#006199"
            android:buttonTint="#006199"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/login"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custombutton"
            android:fontFamily="@font/acme"
            android:onClick="login"
            android:padding="10dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:backgroundTint="#3c4c93" />

        <Button
            android:id="@+id/changepassword"
            android:layout_width="303dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custombutton"
            android:fontFamily="@font/acme"
            android:onClick="createAccount"
            android:padding="10dp"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:backgroundTint="#3c4c93" />

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/passwordforgotten"
            android:gravity="center"
            android:fontFamily="@font/acme"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:onClick="passwordForgotten"/>

        <TextView
            android:id="@+id/versionname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:text="@string/vector_version"
            android:textColor="#3c4c93"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:ignore="HardcodedText,UnusedAttribute" />
    </LinearLayout>

</LinearLayout>