<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/serial_vacant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_weight="0.5"
                    android:text="@string/serial"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/stock_product_name"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:focusable="false"
                    android:clickable="false"
                    android:text="@string/pn"
                    android:textColor="#005CE6"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_marginLeft="0px" />


                <TextView
                    android:id="@+id/mpo_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:focusable="false"
                    android:clickable="false"
                    android:text="mpo code"
                    android:textColor="@color/vector_logo_color"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginLeft="10px" />


                <TextView
                    android:id="@+id/am_code"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:visibility="gone"
                    android:focusable="false"
                    android:textAlignment="gravity"
                    android:layout_gravity="left"
                    android:text="am code"
                    android:clickable="false"
                    android:textColor="@color/blue"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_marginLeft="0dp" />

                <TextView
                    android:id="@+id/territory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="territory"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/colorAccentEditor" />



                <TextView
                    android:id="@+id/mpo_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="mpo password"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/green" />



            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>