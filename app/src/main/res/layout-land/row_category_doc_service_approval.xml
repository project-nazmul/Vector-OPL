<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="2dp">

        <LinearLayout
            android:id="@+id/slistLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            >

            <TextView
                android:id="@+id/row_categoryname_textview_sl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/acme"
                android:text="Service no"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_7sdp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/row_categoryname_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:maxLines="2"
                android:text="Service\nmonth"
                android:fontFamily="@font/acme"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_7sdp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/row_categoryname_textview2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Doctor\nname"
                android:fontFamily="@font/acme"
                android:textColor="@color/vector_logo_color"
                android:textSize="@dimen/_7sdp"
                 />


            <TextView
                android:id="@+id/row_categoryname_textview3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Doctor\nAddress"
                android:fontFamily="@font/acme"
                android:textColor="@color/vector_logo_color"
                android:textSize="@dimen/_6sdp"
                 />

            <TextView
                android:id="@+id/row_categoryname_textview4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Service\nType"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_7sdp"
                android:fontFamily="@font/acme"
                 />


            <TextView
                android:id="@+id/row_categoryname_textview5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Miscelleneous"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_7sdp"
                android:fontFamily="@font/acme"
                 />


            <TextView
                android:id="@+id/row_categoryname_textview6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Venue\ncharge"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_7sdp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/acme"
                 />


            <TextView
                android:id="@+id/row_categoryname_textview7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Sales\nChecked"
                android:textColor="@color/text1"
                android:textSize="@dimen/_7sdp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/acme"
                 />


            <TextView
                android:id="@+id/row_categoryname_textview8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Approve\nDT"
                android:textColor="@color/text1"
                android:textSize="@dimen/_7sdp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/acme"
                 />


            <TextView
                android:id="@+id/row_categoryname_textview9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="PAYMENT\nFLAG"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="@dimen/_7sdp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/acme"
                 />


            <TextView
                android:id="@+id/row_categoryname_textview10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="number"
                android:text="Payment\ndate"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_7sdp"
                android:fontFamily="@font/acme"
                android:textAlignment="textEnd"
                 />


            <CheckBox
                android:id="@+id/row_category_checkbox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>