<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_1sdp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:weightSum="20">


            <TextView
                android:id="@+id/row_categoryname_textview_sl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/roboto"
                android:text="Service no"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#009688"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/row_categoryname_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:maxLines="2"
                android:text="Service\nmonth"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#009688"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/row_categoryname_textview2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLines="4"
                android:text="Doctor\nname"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/bg_gradient_end"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/row_categoryname_textview3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:text="Doctor\nAddress"
                android:maxLines="6"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/bg_gradient_end"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_categoryname_textview4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Service\nType"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/deeppurple"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/row_categoryname_textview5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="service cost"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/row_categoryname_textview6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Venue\ncharge"
                android:maxLines="4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/row_categoryname_textview7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="MPO"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/row_categoryname_textview8"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="2"
                android:fontFamily="@font/roboto"
                android:text="SALES APPROVE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/row_categoryname_textview9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0"
                android:text="PAYMENT\nFLAG"
                android:textAlignment="gravity"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/row_categoryname_textview10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1.5"
                android:text="IN\nHOUSE"
                android:maxLines="4"
                android:singleLine="false"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


            <CheckBox
                android:id="@+id/row_category_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_weight="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>