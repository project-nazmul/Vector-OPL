<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="34">

            <TextView
                android:id="@+id/serial"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:focusable="true"
                android:text="@string/serial"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/dcr_visit_to"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:focusable="true"
                android:text="Visit to"
                android:textColor="@color/blue"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/dcr_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:clickable="true"
                android:text="PPM"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/dcr_type"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:clickable="true"
                android:text="type"
                android:textColor="@color/green1"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/dcr_total"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="start"
                android:layout_weight="4"
                android:clickable="true"
                android:text="total"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/dcr_given"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:clickable="true"
                android:text="given"
                android:textColor="@color/deeppurple"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/dcr_remain"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:clickable="true"
                android:text="rest"
                android:textColor="@color/green1"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/dcr_shift"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:clickable="true"
                android:text="shift"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>




