<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100">



    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/alert_light_frame"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/user_show1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:ems="10"
            android:fontFamily="@font/acme"
            android:text="MSD Doctor Support Followup"
            android:visibility="visible"
            android:gravity="center"
            android:textColor="@color/colorAccentEditor"
            />





    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/headerScroll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/lightgray"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">


            <TextView
                android:id="@+id/sserial"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Sl."
                android:textAllCaps="true"
                android:textColor="@color/quiz"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/mpo_code"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Service\nNo"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/sproduct_name"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Doctor\nName "
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Status"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/ssellvelue"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Entry\nDate"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/sqnty1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Requirement\nDate"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/gval"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Service\nName"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/week1"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Received by\nMSD"
                android:textAllCaps="true"
                android:textColor="@color/vector_logo_color"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/week2"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Sent by\nMSD"
                android:textAllCaps="true"
                android:textColor="@color/vector_logo_color"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/week3"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"

                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Received\nAcknowledgement"

                android:textAllCaps="true"
                android:textColor="@color/vector_logo_color"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/week4"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Executive\nName"
                android:textAllCaps="true"
                android:textColor="@color/vector_logo_color"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/achivement_sales_admin"
                android:layout_width="@dimen/cell_width"
                android:layout_height="match_parent"

                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center|start"
                android:text="Executive\nContact"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvCompany"
        android:layout_height="0dp"
        android:layout_weight="98"
        >
    </androidx.recyclerview.widget.RecyclerView>




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backbt"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dcr_page_button"

            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:onClick="finishActivity"
            android:soundEffectsEnabled="true"
            android:text="&lt;"
            android:textColor="#FFF"
            android:textSize="25sp"
            tools:ignore="HardcodedText,UnusedAttribute" />


    </RelativeLayout>

</LinearLayout>