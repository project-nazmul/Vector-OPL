<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgray"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp"
        >

        <LinearLayout
            android:id="@+id/row_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:visibility="gone"
               />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:gravity="center"
                />

            <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:clickable="false"
                android:focusable="false"
                android:background="#dfdfdf" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                 android:text="emp code"
                android:fontFamily="@font/acme"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/doc_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/acme"
                android:text="MPO CODE"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"/>
            <TextView
                android:id="@+id/doc_designation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:gravity="center"
                android:text="doc designation"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:id="@+id/doc_institute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/acme"
                android:text="doc institute"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:id="@+id/doc_fees"
                android:layout_width="wrap_content"
                android:text="doc fees"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/doc_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="doc schedule"
                android:visibility="gone"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/doc_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:text="docid"
                android:textColor="@color/colorAccentEditor"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/schedule_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:gravity="center"
                android:text="docid:"
                android:textColor="@color/cardview_dark_background"
                android:textSize="14sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/love"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/todo"
                android:focusable="true"
                android:visibility="gone" />

        </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>
