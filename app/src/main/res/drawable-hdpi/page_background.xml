<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#F8F8F8" />
      <stroke
          android:width="0dp"
          android:color="#008080" />
     
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#F8F8F8"
          android:endColor="#FFFFFF"
          android:angle="270" />
      <stroke
          android:width="6dp"
          android:color="#fff" />
    
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
      
    </shape>
  </item>
</selector>