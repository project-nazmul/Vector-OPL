<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100" >

    <LinearLayout
        android:id="@+id/mpoli"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="8">

        <TextView
            android:id="@+id/fromdate"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:enabled="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:selectAllOnFocus="true"
            android:text="From Date"
            android:textSize="15sp"
            android:visibility="gone"
            tools:ignore="RtlSymmetry"

            />


        <Spinner
            android:id="@+id/mpo"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_weight="2"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:filterTouchesWhenObscured="true"
            android:fontFamily="cursive"
            android:hapticFeedbackEnabled="true"
            android:prompt="@string/customerspin"
            android:soundEffectsEnabled="true"
            android:spinnerMode="dialog"
            android:textSize="22sp"
            android:visibility="gone"
            tools:ignore="UnusedAttribute" />


        <TextView
            android:id="@+id/todate"
            android:layout_width="100sp"
            android:layout_height="42dp"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:enabled="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:selectAllOnFocus="true"
            android:text="To Date"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_weight="2"
            tools:ignore="RtlSymmetry" />



        <TextView
            android:layout_gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Doctor Not Visited"
            android:fontFamily="cursive"
            android:gravity="center"
            />

        <Button
            android:id="@+id/submitBtn_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/dcr_page_button"
            android:fontFamily="cursive"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:paddingTop="10dp"
            android:soundEffectsEnabled="true"
            android:text="show"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="18sp" />



    </LinearLayout>







    <LinearLayout

        android:id="@+id/mpo_am_report"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="5">


        <TextView
            android:layout_width="80dp"
            android:text="Select Date"
            android:layout_height="42dp"
            android:textSize="15sp"
            android:filterTouchesWhenObscured="true"
            android:hapticFeedbackEnabled="true"
            android:fontFamily="cursive"
            />




        <Button
            android:id="@+id/submitBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/darkblue"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:soundEffectsEnabled="true"
            android:text="show"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute"
            android:visibility="gone"/>









    </LinearLayout>




















    <LinearLayout
        android:id="@+id/textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="98"

        >


    </LinearLayout>




    <LinearLayout
        android:id="@+id/slistLayout2"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/row_1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:focusable="true"
            android:text="@string/serial"
            android:textAlignment="center"

            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/row_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:focusable="true"
            android:text="Doctor Name "
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/row_3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="Code"

            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/row_6"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:clickable="true"
            android:text="Mpo Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/row_7"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:clickable="true"
            android:text="Code"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp" />




    </LinearLayout>

    <ListView
        android:id="@+id/pListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="95.00"
        android:listSelector="@drawable/active"
        android:background="@drawable/layout_background"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="1px">
    </ListView>

    <LinearLayout
        android:id="@+id/totalshow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:drawable/alert_light_frame"
        android:weightSum="98"
        android:visibility="gone">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/totalsellquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:gravity="end"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:textSize="11sp"
            android:text="" />

        <TextView
            android:id="@+id/totalsellvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:gravity="end"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:textSize="11sp"

            android:text="" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_background"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        >


        <Button
            android:id="@+id/backbt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/dcr_page_button"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:onClick="finishActivity"
            android:soundEffectsEnabled="true"
            android:text="&lt;"
            android:textColor="#FFF"
            android:textSize="25sp"
            tools:ignore="HardcodedText,UnusedAttribute" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/backbt"
            android:fontFamily="cursive"
            android:text="Not Visited :  "
            android:visibility="gone"
            android:textSize="16dp" />


    </RelativeLayout>

</LinearLayout>