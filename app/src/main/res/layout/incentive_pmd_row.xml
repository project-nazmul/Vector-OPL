<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardPmdIncentive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:clickable="false"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dividerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="#FF9797" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FF9797" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_6sdp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmployeeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Employee Name"
                        android:textColor="#4CAF50"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvFFName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Employee Code"
                            android:textColor="#F44336"
                            android:textSize="10sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tvEmployeeCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:text="Employee Code"
                            android:textColor="#837A7D"
                            android:textSize="10sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvEmpDesignation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_2sdp"
                    android:text="Designation"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvEmployeePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Phone"
                    android:textColor="#3F51B5"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="end">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgPmdContact"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:padding="@dimen/_8sdp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:src="@drawable/vector"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/incentiveTitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#F6E6BF"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:paddingStart="@dimen/_32sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingEnd="@dimen/_32sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="Brand Name"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/dcr_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctorLayout">

            <TextView
                android:id="@+id/monthTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Month"
                android:textColor="#000000"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/targetTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Target"
                android:textColor="#0F31DB"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/salesTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Sales"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/AchieveTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Ach (%)"
                android:textColor="#09847D"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/expenseTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Expense Ratio (%)"
                android:textColor="@color/deeppurple"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/growthTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Growth (%)"
                android:textColor="@color/green1"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/expenseTitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Expense Ratio (%)"
                android:textColor="@color/deeppurple"
                android:textSize="@dimen/_8sdp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/achieveLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/dcr_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctorLayout">

            <TextView
                android:id="@+id/monthValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Month"
                android:textColor="#000000"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/targetValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Target"
                android:textColor="#0F31DB"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/salesValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Sales"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/achieveValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Ach (%)"
                android:textColor="#09847D"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/expenseValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Expense Ratio (%)"
                android:textColor="@color/deeppurple"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/growthValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Growth (%)"
                android:textColor="@color/green1"
                android:textSize="@dimen/_8sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#424242" />

            <TextView
                android:id="@+id/expenseValue1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Expense Ratio (%)"
                android:textColor="@color/deeppurple"
                android:textSize="@dimen/_8sdp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="@string/achieve_notice"
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>