<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="19">


    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/serial_report"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="start"
                android:text="@string/serial"
                android:textColor="@color/darkblue"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/segment_code"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:focusable="true"
                android:gravity="start"
                android:text="@string/code_of_mpo"
                android:textColor="@color/colorAccentEditor"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/product_name_target_quant"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:focusable="true"
                android:gravity="start"
                android:text="@string/pn"
                android:textColor="@color/blue"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/amqnty_target_quant"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="right"
                android:text="Target "
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/amvalue_target_quant"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="right"
                android:text="Sale "
                android:textColor="@color/blue"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/achv_target_quant"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="right"
                android:text="Achievment"
                android:textColor="@color/green1"
                android:textSize="@dimen/_8sdp" />


            <TextView
                android:id="@+id/growth_target_quant"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="right"
                android:text="Achievment"
                android:textColor="@color/blue"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>