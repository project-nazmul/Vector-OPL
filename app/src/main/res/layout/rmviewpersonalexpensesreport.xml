<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/serial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:focusable="true"
            android:text="@string/serial"
            android:textSize="@dimen/_8sdp"
            android:textAlignment="center"
            android:textColor="@color/darkblue" />


        <TextView
            android:id="@+id/rm_pex_mode"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="3"
            android:focusable="true"
            android:text="@string/pn"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/blue"
            android:layout_marginLeft="10px" />

        <TextView
            android:id="@+id/rm_pex_distance"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:clickable="true"
            android:text="@string/target_quantity"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp"
            android:focusable="true" />

        <TextView
            android:id="@+id/rm_pex_loc"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="3"
            android:clickable="true"
            android:text="@string/tar2"
            android:textSize="@dimen/_8sdp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:focusable="true" />


        <TextView
            android:id="@+id/rm_pex_ta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:clickable="true"
            android:text="extra1"
            android:textSize="@dimen/_8sdp"
            android:textAlignment="center"
            android:textColor="@color/bg_gradient_end" />

        <TextView
            android:id="@+id/rm_pex_da"
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:clickable="true"
            android:text="extra2"
            android:textAlignment="center"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/bg_gradient_end" />

        <TextView
            android:id="@+id/rm_pex_other"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:clickable="true"
            android:text="extra2"
            android:textSize="@dimen/_8sdp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark" />


        <TextView
            android:id="@+id/value_7"
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="extra2"
            android:textSize="@dimen/_8sdp"
            android:textAlignment="gravity"
            android:textColor="@android:color/holo_purple"
            android:visibility="gone" />




    </LinearLayout>


</LinearLayout>
    </androidx.cardview.widget.CardView>







</LinearLayout>

